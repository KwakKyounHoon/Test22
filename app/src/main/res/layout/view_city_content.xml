<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    android:paddingTop="15dp"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/frame"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/roma"
            android:scaleType="centerCrop"
            android:id="@+id/image_city"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_heart"
            android:src="@drawable/heart2"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="US$100"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:background="#55000000"
            />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eiffel Tower - studio"
        android:id="@+id/text_name"
        android:layout_below="@+id/frame" />
    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="3.0"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view"
        android:text="107"

        android:layout_alignBottom="@+id/ratingBar"
        android:layout_toRightOf="@+id/ratingBar"
        android:layout_toEndOf="@+id/ratingBar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_house"
        android:text="집 전체"
        android:layout_alignTop="@+id/text_view"
        android:layout_toRightOf="@+id/text_view"
        android:layout_toEndOf="@+id/text_view" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_profile"
        android:layout_below="@+id/frame"
        android:layout_alignBottom="@+id/text_house"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>